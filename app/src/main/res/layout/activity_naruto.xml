<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".NarutoActivity">

    <TextView
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:text="说明：以上火影头像图片全来自互联网,如果有侵犯到你的版权的话，可以联系我，我马上删掉。。。前提是证明图片是你的，啊哈哈。。。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="火影印花"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/fl_view"
        android:background="@drawable/gdi"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g1" />

                    <ImageView
                        android:id="@+id/iv_num1"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/v1"
                        android:visibility="gone"
                        android:background="@drawable/left_corner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <View
                        android:id="@+id/g1"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g2" />
                    <ImageView
                        android:id="@+id/iv_num2"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/v2"
                        android:visibility="gone"
                        android:background="#90000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/g2"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g3" />
                    <ImageView
                        android:id="@+id/iv_num3"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/v3"
                        android:visibility="gone"
                        android:background="@drawable/right_corner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/g3"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g4" />
                    <ImageView
                        android:id="@+id/iv_num4"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/v4"
                        android:visibility="gone"
                        android:background="#90000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/g4"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g5" />
                    <ImageView
                        android:id="@+id/iv_num5"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/v5"
                        android:visibility="gone"
                        android:background="#90000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/g5"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g6" />
                    <ImageView
                        android:id="@+id/iv_num6"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/v6"
                        android:visibility="gone"
                        android:background="#90000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/g6"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">



                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g7" />
                    <ImageView
                        android:id="@+id/iv_num7"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
