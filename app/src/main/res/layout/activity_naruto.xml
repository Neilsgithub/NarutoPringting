                    <View
                        android:id="@+id/g7"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g8" />
                    <ImageView
                        android:id="@+id/iv_num8"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/v8"
                        android:visibility="gone"
                        android:background="#90000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/g8"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g9" />
                    <ImageView
                        android:id="@+id/iv_num9"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/v9"
                        android:visibility="gone"
                        android:background="@drawable/right_corner_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/g9"
                        android:visibility="gone"
                        android:background="#90ffeb3b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gddivider">
        </View>
    </FrameLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_below="@+id/fl_view"
        android:text="游戏开始"
        android:textColor="#000000"
        android:background="@drawable/naruto"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>
